<section class="section">
  <div class="row">


    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Tech Blog Posts</h5>

        <div class="container mt-4">

          {{#each posts as |post|}}
          <div class="card mb-4">
            <div class="card-header">
              <div class="row">
                <div class="col-md-6">
                  <a href="/post/{{id}}" target="_blank" class="post-title text-decoration-none fw-bold">{{title}}</a>
                </div>

                <div class="col-md-6 text-md-end">
                  <p><small>Posted by
                      {{user.name}}
                      on
                      {{format_date createdAt}}</small></p>
                </div>
              </div>
            </div>

            <div class="card-body">
              <p>{{content}}</p>
            </div>

            <div class="card-footer">
              <a href="/post/{{id}}" class="card-footer-item">
                {{comments.length}}
                {{format_plural "comment" comments.length}}</a>
            </div>
          </div>

          {{else}}
          <p>No posts available</p>
          {{/each}}
        </div>

      </div>
    </div>

  </div>



</section>