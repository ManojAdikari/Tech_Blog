<div class="container mt-5">
  <div class="card mb-4">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6">
          <a href="/post/{{id}}" target="_blank" class="post-title text-decoration-none fw-bold">{{title}}</a>
        </div>

        <div class="col-md-6 text-md-end">
          <p><small>Posted by
              {{user.name}}
              on
              {{format_date createdAt}}</small></p>
        </div>
      </div>
    </div>

    <div class="card-body">
      <p>{{content}}</p>
    </div>

    <div class="card-footer">
      <a href="/post/{{id}}" class="card-footer-item">
        {{comments.length}}
        {{format_plural "comment" comments.length}}</a>
    </div>
  </div>
  <div class="container">
    <h2>Comments</h2>

    <ul class="list-group">
      {{#each comments as |comment|}}
      <li class="list-group-item bg-secondary text-white my-3">
        <div class="column">
          <div class="col">
            {{comment_text}}

          </div>
          <div class="col text-md-end text-warning">
            <p><small>--- Comment by
                {{user.name}}
                on
                {{format_date createdAt}}</small></p>
          </div>
        </div>

        <button data-comment-id="{{id}}" class="btn btn-danger btn-sm delete-comment">Delete</button>

        <button type="button" class="btn btn-sm btn-warning edit-comment" data-bs-toggle="modal"
          data-bs-target="#edit-comment-modal" data-comment-id="{{id}}">Edit</button>

      </li>
      {{/each}}
    </ul>
  </div>

  <button class="btn btn-primary my-3" type="button" data-bs-toggle="collapse" data-bs-target="#add-comment-form"
    aria-expanded="false" aria-controls="add-comment-form">
    Add Comment
  </button>
  <div class="collapse" id="add-comment-form">
    <form id="add-comment-form">
      <input type="hidden" name="post_id" value="{{post.id}} ">
      <div class="mb-3">
        <label for="comment-body" class="form-label">Comment</label>
        <textarea class="form-control" name="comment_body" id="comment-body" rows="10" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>

<!-- Edit comment modal -->
<div class="modal fade" id="edit-comment-modal" tabindex="-1" aria-labelledby="edit-comment-modal-label"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit-comment-modal-label">Edit Comment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="edit-comment-form">
          <input type="hidden" name="comment_id" id="edit-comment-id">
          <div class="mb-3">
            <label for="edit-comment-body" class="form-label">Comment</label>
            <textarea class="form-control" name="edit_comment_body" id="edit-comment-body" rows="3" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save Changes</button>
        </form>
      </div>
    </div>
  </div>
</div>



<script src="/js/delete-comment.js"></script>
<script src="/js/edit-comment.js"></script>
<script src="/js/add-comment.js"></script>